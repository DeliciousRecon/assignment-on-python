1. strg = input("Enter a string")
2. print("Reversed string: ", strg[::-1])
3. 
4. def palindromecheck():
5. if (strg == strg[::-1]):
6. print("String is a palindrome")
7. else:
8. print("String not palindrome")
9. 
10. def insertSpace():
11. strn=strg
12. print(" ".join(strn))
13. 
14. palindromecheck()
15. insertSpace()
